# Environment Configuration for DriveWise AI
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Cloud Platform Configuration
# =============================================================================
# Your Google Cloud Project ID (create at https://console.cloud.google.com)
GCP_PROJECT_ID=ai-accelerate-hackathon

# GCP region for services
GCP_LOCATION=us-central1

# Path to your service account JSON key file
# Get this by running: ./setup-gcp.sh (automated)
# Or follow the manual guide in: GCP_SETUP_GUIDE.md
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account-key.json

# BigQuery Configuration
BIGQUERY_DATASET_ID=drivewise_ai

# =============================================================================
# API Keys and External Services
# =============================================================================

# TomTom Traffic API
TOMTOM_API_KEY=Agt3lWysptoAwBseyCZpPHdDFUrzd1KG

# NHTSA API (no key required, but rate limited)
NHTSA_BASE_URL=https://vpic.nhtsa.dot.gov/api/vehicles

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (if using for user management)
DATABASE_URL=postgresql://user:password@localhost:5432/drivewise_ai

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Authentication and Security
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# ML and AI Configuration
# =============================================================================

# Vertex AI Configuration
VERTEX_AI_REGION=us-central1
VERTEX_AI_MODEL_NAME=gemini-pro

# Model versions
RISK_MODEL_VERSION=v1.0
SAFETY_MODEL_VERSION=v1.0

# =============================================================================
# Application Configuration
# =============================================================================

# Flask/FastAPI Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Data Pipeline Configuration
# =============================================================================

# Batch processing settings
BATCH_SIZE=100
PROCESSING_INTERVAL_MINUTES=15

# Data retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Google Cloud Logging
ENABLE_CLOUD_LOGGING=true
LOG_LEVEL=INFO

# Error tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_REAL_TIME_SCORING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_CONVERSATIONAL_AGENT=true
ENABLE_INSURANCE_QUOTES=false

# =============================================================================
# Development and Testing
# =============================================================================

# Test environment settings
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/drivewise_ai_test
ENABLE_TEST_DATA=false

# Mock API responses for development
USE_MOCK_TOMTOM_API=false
USE_MOCK_NHTSA_API=false
USE_MOCK_VERTEX_AI=false